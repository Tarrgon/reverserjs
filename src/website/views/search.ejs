<!DOCTYPE html>

<html>

<head>
  <title>Yiff Today - Aggregation</title>

  <%- include("./partials/head", {navData: {active: "Search"}}); %>
</head>

<body>
  <%- include("./partials/nav", {navData: {active: "Search"}}); %>

  <section class="hero">
    <div class="hero-body">
      <h1 class="title">Search</h1>
      <div id="search-container" class="mt-3 mb-6 mx-6">
        <div class="columns is-vcentered">
          <div class="column is-1">
            <label class="label has-text-right">File</label>
          </div>
          <div class="column is-4">
            <div class="file has-name">
              <label class="file-label">
                <input id="file" class="file-input" type="file" onchange="changeFile(event)" accept="image/jpeg, image/png, image/apng, image/gif, video/mp4, video/webm" />
                <span class="file-cta">
                  <span class="file-icon">
                    <i class="fas fa-upload"></i>
                  </span>
                  <span class="file-label">Choose a fileâ€¦</span>
                </span>
                <span id="file-name" class="file-name">File name</span>
              </label>
            </div>
          </div>
        </div>

        <div class="columns is-vcentered">
          <div class="column is-1">
            <label class="label has-text-right">URL (e621 post URL also accepted)</label>
          </div>
          <div class="column is-2">
            <div class="field">
              <p class="control">
                <input id="url" class="input" type="text">
              </p>
            </div>
          </div>
        </div>

        <div class="columns is-vcentered">
          <div class="column is-1">
            <label class="label has-text-right">Minimum similarity</label>
          </div>
          <div class="column is-2">
            <div class="field">
              <p class="control">
                <input id="score-cutoff" class="input" type="number" value="85">
              </p>
            </div>
          </div>
        </div>
        <button class="button is-success" onclick="search()">Search</button>
      </div>
    </div>
  </section>
  <script src="/js/search.js"></script>
</body>

</html>